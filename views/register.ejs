<html>
<head>
	<!-- CSS AND JQUERY FILES -->
	<link rel="stylesheet" href="/assets/bootstrap-3.3-1.7-dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="/assets/css/style_register.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<title> Horta Hidroponica!</title>
</head>
<body>
	<div class="container signup-container">
		<h2 class="text-center titulo-cadastro">CADASTRE-SE!</h2>
		<form id="signup" method="POST" action="/register">
			<div class="container-fluid cadastro">
				<div class="form-left col-lg-6">
					<div class="form-group">
					<label for="inputEmail">Endereço de E-mail</label>
					<input type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="Digite seu e-mail" name="email" required>
					<h4 id="emailHelp" class="form-text text-muted">Não vamos compartilhar seu e-mail com ninguém.</h4>
					</div>
					<% if(error["msg"] !== ''){ %>
					<p style="font-size: 20px; color: red;"><%= error["msg"] %></p>
					<% } %>
					<div class="form-group">
					<label for="inputSenha">Senha</label>
					<input type="password" class="form-control" id="inputSenha" aria-describedby="emailHelp" placeholder="Digite sua senha" name="senha" required>
					</div>
					<div>
					<label for="inputSenha2">Confirme a senha</label>
					<input type="password" class="form-control" id="inputSenha2" aria-describedby="emailHelp" placeholder="Confirme sua senha" name="senha2" required>
					</div>
				</div>
				<div class="form-right col-lg-6">
					<div class="form-group">
					<label for="inputNome">Nome Completo</label>
					<input type="text" class="form-control" id="inputNome" aria-describedby="emailHelp" placeholder="Digite seu nome completo" name="nome" required>
					<h4 id="emailHelp" class="form-text text-muted">Não vamos compartilhar seu nome com ninguém.</h4>
					</div>
					<div class="form-group">
					<label for="inputEstado">Estado</label>
					<input type="text" class="form-control" id="inputEstado" aria-describedby="emailHelp" placeholder="Digite seu estado" name="estado">
					</div>
					</div>
				</div>
			<button type="submit" class="btn btn-primary">Submit</button>
		</form>
		<button class="btn btn-default" style="width: auto"><a href="/auth/google">Sign in with Google+</a></button>
	</div>
	
</body>
<script src="/assets/js/main.js"></script>
</html>